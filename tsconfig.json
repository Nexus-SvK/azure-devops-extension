{
	"compilerOptions": {
		"charset": "utf8",
		"ignoreDeprecations": "5.0",
		"experimentalDecorators": true,
		"module": "AMD",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strict": true,
		"target": "ESNext",
		"rootDir": "src/",
		"outDir": "dist/",
		"jsx": "react",
		"lib": ["ESNext", "dom"],
		"types": ["react", "jest", "node"],
		"esModuleInterop": true
	}
}
